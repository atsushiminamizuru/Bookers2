<main>
<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td>
              <%= link_to user_path(book.id) do %>
                <%= image_tag 'book.user.get_profile_image(100, 100)' %>
              <% end %>
            </td>
            <td><%= link_to "book.Title", book_path %></td>
            <td><%= book.Body %></td>
        </tr>
        <% end %>
    </tbody>
</table>
</main>
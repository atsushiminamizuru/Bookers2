<main>
<div>
 <%= flash[:notice] %>
</div>

<h1>Book detail</h1>
<table>
    <tbody>
        <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(200, 200) %><br>
              <%= link_to  "@book.user.name", user_path(@book.id) %>
            </td>
            <td><%= @book.Title %></td>
            <td><%= @book.Body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete,"data-confirm" => "本当に消しますか？" %></td>
            <% end %>
        </tr>
    </tbody>
</table>
</main>
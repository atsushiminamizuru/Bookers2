<main>
<p>><%= flash[:notice] %></p>
<!--ここまでheaderとボディコンテンツの間-->
    <div class="container px-5 px-sm-0">
      <div class="row">
<!--全部の箱完成、並べる-->
        <div class="col-md-3">
          <h2>User info</h2>
          <%= image_tag @book.user.get_profile_image(100, 100) %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= @book.user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @book.user.introduction %></th>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <%= link_to edit_user_path(@book.user.id),class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
          <h2 class="mt-3">New book</h2>
          <%= form_with model: @book_new do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label><br>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <label for="book_body">Opinion</label><br>
            <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
          </div>
          <% end %>
        </div>

        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
            <tbody>
              <tr>
                <td>
                <%= link_to user_path(@book.user.id) do %>
                <%= image_tag @book.user.get_profile_image(100, 100) %><br>
                <%= @book.user.name %>
                <% end %>
                </td>
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>
                <% if @book.user == current_user %>
                <td>
                  <%= link_to "Edit",edit_book_path(@book.id),class: "btn btn-sm btn-success" %>
                </td>
                <td>
                  <%= link_to "Destroy",book_path,class: "btn btn-sm btn-danger",method: :delete,"data-confirm" => "本当に消しますか？" %>
                </td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>

      </div>
    </div>
</main>
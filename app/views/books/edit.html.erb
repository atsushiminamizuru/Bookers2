<main>
<h1>Editing Book</h1>
<% if @book.errors.any? %>
<div id="error">
 <p><%= @book.errors.count %> errors prohibited this obj from being saved:</p>
 <ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
 </ul>
</div>
<% end %>

<%= form_with model:@book do |f| %>
  <label for="inputTitle">Title</label><br>
  <%= f.text_field :Title %><br>
  <label for="inputBody">Opinion</label><br>
  <%= f.text_area :Body %><br>
  <%= f.submit %>
<% end %>
<span><%= link_to "Show",book_path(@book.id) %></span>
|
<span><%= link_to "Back",books_path %></span>
</main>
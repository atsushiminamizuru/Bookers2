<main>
  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
      <div id="error">
      <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
      </div>
      <% end %>
      <%= form_with model:@book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label><br>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="book_body">Opinion</label><br>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book" />
        </div>
      <% end %>

      <span><%= link_to "Show",book_path(@book.id) %></span> | <span><%= link_to "Back",books_path %></span>
      </div>
    </div>
  </div>

</main>
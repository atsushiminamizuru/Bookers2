<main>
  <p id="notice"><%= flash[:notice] %></p>
<!--ここまでheaderとボディコンテンツの間-->
    <div class="container px-5 px-sm-0">
      <div class="row">
<!--全部の箱完成、並べる-->
        <div class="col-md-3">
          <h2>User info</h2>
          <%= image_tag @user.get_profile_image(100, 100) %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <%= link_to edit_user_path(@user.id),class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
          <h2 class="mt-3">New book</h2>
          <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label><br>
            <%= f.text_field :Title %>
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label><br>
            <%= f.text_area :Body %>
          </div>
          <div class="form-group">
            <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
          </div>
          <% end %>
        </div>

        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
            <% @books.each do |book| %>
              <tr>
                <th><%= image_tag book.user.get_profile_image(100, 100) %></th>
                <th>
                  <%= link_to book_path(book.id) do %>
                  <%= book.Title %>
                  <% end %>
                </th>
                <th><%= book.Body %></th>
                <th></th>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
</main>

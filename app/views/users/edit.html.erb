<main>
<h1>User info</h1>
<% if @user.errors.any? %>
<div id="error">
 <p><%= @user.errors.count %> errors prohibited this obj from being saved:</p>
 <ul>
  <% @user.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
 </ul>
</div>
<% end %>

<%= form_with model:@user do |f| %>
  <label for="inputName">Name</label><br>
  <%= f.text_field :name %><br>
  <label for="inputImage">Image</label><br>
  <%= f.file_field :profile_image, accept: "image/*" %><br>
  <label for="inputIntroduction">Introduction</label><br>
  <%= f.text_area :introduction %><br>
  <%= f.submit %>
<% end %>
</main>